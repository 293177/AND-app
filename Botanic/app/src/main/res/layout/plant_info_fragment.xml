<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PlantInfo_Fragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a4bd80"
        tools:context =".plant_info">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            app:layout_editor_absoluteX="4dp"
            app:layout_editor_absoluteY="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spnrSelect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="90"/>
                <ImageView
                    android:id="@+id/btnAddPlant"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_baseline_add_24"
                    android:contentDescription="Add plant button" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/arrowPrev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:contentDescription="Arrow back" />

                <Button
                    android:id="@+id/btnPrev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/architects_daughter"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5sp"
                    android:text="@string/previous"
                    android:textColor="#005720"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/architects_daughter"
                    android:gravity="center|right|center_vertical"
                    android:paddingLeft="5sp"
                    android:text="@string/next"
                    android:textColor="#005720"
                    android:textSize="22sp" />
                <ImageView
                    android:id="@+id/arrowNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:contentDescription="arrow front" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:background="#4CAF50"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#ECD5B8"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/plantCrop"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/startmenu_background_plant"
                        android:contentDescription="empty plant" />
                    <TableLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_margin="5dp"
                        android:background="#ECD5B8">
                        <TableRow
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:layout_width="match_parent">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:layout_weight="50"
                                android:fontFamily="@font/architects_daughter"
                                android:gravity="center|right"
                                android:text="@string/season"
                                android:textColor="#4CAF50"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/txtSeasons"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="50"
                                android:text="@string/empty"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textColor="#4CAF50"
                                android:textSize="18sp"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="33">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:layout_weight="50"
                                android:fontFamily="@font/architects_daughter"
                                android:gravity="center|right"
                                android:text="@string/watering"
                                android:textColor="#4CAF50"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/txtWatering"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="50"
                                android:text="@string/empty"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textColor="#4CAF50"
                                android:textSize="18sp"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="33">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:layout_weight="50"
                                android:fontFamily="@font/architects_daughter"
                                android:gravity="center|right"
                                android:text="@string/sunlight"
                                android:textColor="#4CAF50"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/txtSunlight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="50"
                                android:text="@string/empty"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textColor="#4CAF50"
                                android:textSize="18sp"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="60"
                android:background="#4CAF50"
                android:orientation="horizontal">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#ECD5B8">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp">
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:fontFamily="@font/architects_daughter"
                                    android:text="@string/general"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="5dp"
                                    android:layout_weight="50"
                                    android:fontFamily="@font/architects_daughter"
                                    android:gravity="center|right"
                                    android:text="@string/temperature"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/txtTemperature"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:layout_gravity="center"
                                    android:text="@string/empty"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="5dp"
                                    android:layout_weight="50"
                                    android:fontFamily="@font/architects_daughter"
                                    android:gravity="center|right"
                                    android:text="@string/life_span"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/txtLifeSpan"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:layout_gravity="center"
                                    android:text="@string/empty"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="5dp"
                                    android:layout_weight="50"
                                    android:fontFamily="@font/architects_daughter"
                                    android:gravity="center|right"
                                    android:text="@string/pollination"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/txtPollination"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:layout_gravity="center"
                                    android:text="@string/empty"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="5dp"
                                    android:layout_weight="50"
                                    android:fontFamily="@font/architects_daughter"
                                    android:gravity="center|right"
                                    android:text="@string/cat_friendly"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/txtCatFriendly"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:layout_gravity="center"
                                    android:text="@string/empty"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="5dp"
                                    android:layout_weight="50"
                                    android:fontFamily="@font/architects_daughter"
                                    android:gravity="center|right"
                                    android:text="@string/origin"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/txtOrigin"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:layout_gravity="center"
                                    android:text="@string/empty"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="5dp"
                                    android:layout_weight="50"
                                    android:fontFamily="@font/architects_daughter"
                                    android:gravity="center|right"
                                    android:text="@string/weeks_to_harvest"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/txtHarvest"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:layout_gravity="center"
                                    android:text="@string/empty"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:fontFamily="@font/architects_daughter"
                                    android:textColor="#4CAF50"
                                    android:text="@string/notes"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="33">
                                <TextView
                                    android:id="@+id/txtNotes"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="50"
                                    android:fontFamily="sans-serif"
                                    android:text="@string/empty"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="18sp"/>
                            </TableRow>
                        </TableLayout>
                        <Button
                            android:id="@+id/btnDelete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00FFFFFF"
                            android:fontFamily="@font/architects_daughter"
                            android:text="@string/delete_plant"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="40sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>